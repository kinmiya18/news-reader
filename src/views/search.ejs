<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tìm kiếm</li>
            </ol>
        </nav>
        <h1 class="mb-4">Kết quả tìm kiếm cho "<%= searchQuery %>"</h1>
    </div>
    
    <% if (news && news.length > 0) { %>
        <% news.forEach(item => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <% if (item.thumbnail) { %>
                        <img src="<%= getImageProxyUrl(item.thumbnail) %>" class="card-img-top" alt="<%= item.title %>">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= item.title %></h5>
                        <p class="card-text"><%= item.summary %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <%= new Date(item.publishedAt).toLocaleDateString('vi-VN') %>
                            </small>
                            <a href="/news/detail/<%= item._id %>" class="btn btn-primary">Đọc tiếp</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?q=<%= searchQuery %>&page=<%= currentPage - 1 %>">Previous</a>
                            </li>
                        <% } %>
                        
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?q=<%= searchQuery %>&page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?q=<%= searchQuery %>&page=<%= currentPage + 1 %>">Next</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        <% } %>
    <% } else { %>
        <div class="col-12">
            <div class="alert alert-info">
                Không tìm thấy kết quả nào cho từ khóa "<%= searchQuery %>".
            </div>
        </div>
    <% } %>
</div>